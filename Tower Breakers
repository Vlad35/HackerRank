import java.util.*;

public class Main {
    private static  int towerBreakers(int n,int m) {
        return (n % 2 == 0 || m == 1) ? 2 : 1;
    }
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        int n = sc.nextInt();
        int m = sc.nextInt();
        System.out.println(towerBreakers(n,m));
    }
}
